@page 
@model ProductsManager.Pages.ShoppingCartModel

<h1>Your Shopping Cart</h1>

<table>
    <thead>
        <tr>
            <th>Product ID</th>
            <!-- Add other columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var productId in Model.Cart)
        {
            <tr>
               
                <td>@productId</td>
                <td>
                    <form method="post" asp-page-handler="Cart" asp-route-id="@productId" class="d-inline">
                        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-xmark"></i></button>
                    </form>
                </td>
                <!-- Add other columns as needed -->
            </tr>
           
        }
    </tbody>
</table>
<div>
    <a asp-page="/Index">Back to List</a>
</div>